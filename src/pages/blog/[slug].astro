---
import { getCollection } from 'astro:content';
import GlitchLayout from '../../layouts/GlitchLayout.astro';
import { formatDate } from '../../utils/dateUtils';
import { getCategoryColor, getCategoryDisplayName } from '../../utils/postUtils';
import { UI_CONFIG, COLLECTION } from '../../constants';

// Rutas estÃ¡ticas para los posts
export async function getStaticPaths() {
  const blogEntries = await getCollection(COLLECTION.BLOG);
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const pageTitle = `${entry.data.title} | ${UI_CONFIG.BRAND_NAME}`;
---

<GlitchLayout 
  title={pageTitle}
  description={entry.data.description}
  image={entry.data.image}
>
  <article class="blog-post">
    <div class="container">
      <!-- Header del post -->
      <header class="post-header">
        <div class="post-meta">
          <span class={`category-tag ${getCategoryColor(entry.data.category)}`}>
            {getCategoryDisplayName(entry.data.category)}
          </span>
          <time class="post-date" datetime={entry.data.publishDate.toISOString()}>
            {formatDate(entry.data.publishDate)}
          </time>
        </div>
        
        <h1 class="post-title">{entry.data.title}</h1>
        
        <p class="post-description">{entry.data.description}</p>
        
        {entry.data.image && (
          <div class="post-image">
            <img 
              src={entry.data.image} 
              alt={entry.data.title}
              loading="eager"
            />
          </div>
        )}
      </header>

      <!-- Contenido del post -->
      <div class="post-content">
        <Content />
      </div>
    </div>
  </article>
</GlitchLayout>

<style>
  .blog-post {
    padding: 2rem 0 4rem;
    min-height: calc(100vh - 200px);
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .post-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .post-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .category-tag {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid currentColor;
  }

  .category-tag.red {
    color: var(--accent-1);
    border-color: var(--accent-1);
  }

  .category-tag.blue {
    color: var(--accent-2);
    border-color: var(--accent-2);
  }

  .category-tag.yellow {
    color: var(--accent-3);
    border-color: var(--accent-3);
  }

  .post-date {
    color: var(--txt-muted);
    font-size: 0.9rem;
    font-weight: 500;
  }

  .post-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 2.5rem;
    line-height: 1.2;
    margin: 0 0 1rem;
    color: var(--txt-main);
    text-align: center;
  }

  .post-description {
    font-size: 1.1rem;
    color: var(--txt-muted);
    line-height: 1.6;
    margin: 0 0 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .post-image {
    margin: 2rem 0;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow);
  }

  .post-image img {
    width: 100%;
    height: auto;
    max-height: 400px;
    object-fit: cover;
    object-position: center;
    display: block;
  }
  .post-content {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--txt-main);
  }

  .post-content :global(h1) {
    font-family: 'Orbitron', sans-serif;
    font-size: 2rem;
    margin: 2.5rem 0 1rem;
    color: var(--txt-main);
    line-height: 1.3;
    font-weight: 600;
  }

  .post-content :global(h2) {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.6rem;
    margin: 2rem 0 1rem;
    color: var(--txt-main);
    line-height: 1.3;
    font-weight: 600;
  }

  .post-content :global(h3) {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.3rem;
    margin: 1.5rem 0 0.75rem;
    color: var(--txt-main);
    line-height: 1.3;
    font-weight: 600;
  }

  .post-content :global(h4),
  .post-content :global(h5),
  .post-content :global(h6) {
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    margin: 1.25rem 0 0.5rem;
    color: var(--txt-main);
    line-height: 1.4;
  }

  .post-content :global(p) {
    margin: 1rem 0;
    color: var(--txt-main);
  }

  .post-content :global(a) {
    color: var(--accent-2);
    text-decoration: underline;
    text-decoration-color: rgba(0, 195, 255, 0.4);
    text-underline-offset: 2px;
    transition: all 0.2s ease;
  }

  .post-content :global(a:hover) {
    text-decoration-color: var(--accent-2);
    opacity: 0.8;
  }

  .post-content :global(strong) {
    color: var(--txt-main);
    font-weight: 700;
  }

  .post-content :global(em) {
    color: var(--txt-muted);
    font-style: italic;
  }

  .post-content :global(blockquote) {
    border-left: 3px solid var(--txt-muted);
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 0 8px 8px 0;
    font-style: italic;
    color: var(--txt-muted);
  }

  .post-content :global(code) {
    background: var(--bg-card);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
    color: var(--txt-muted);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .post-content :global(pre) {
    background: var(--bg-card);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: var(--shadow);
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
    border: none;
    color: var(--txt-main);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .post-content :global(li) {
    margin: 0.5rem 0;
    color: var(--txt-main);
  }

  .post-content :global(li::marker) {
    color: var(--accent-2);
  }

  .post-content :global(hr) {
    border: none;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--accent-2), transparent);
    margin: 2rem 0;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
    box-shadow: var(--shadow);
  }

  .post-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    background: var(--bg-card);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: var(--shadow);
  }

  .post-content :global(th),
  .post-content :global(td) {
    padding: 0.75rem 1rem;
    text-align: left;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .post-content :global(th) {
    background: rgba(0, 195, 255, 0.1);
    color: var(--accent-2);
    font-weight: 600;
  }
/* Mobile */
  @media (max-width: 768px) {
    .blog-post {
      padding: 1rem 0 3rem;
    }

    .post-title {
      font-size: 2rem;
    }

    .post-description {
      font-size: 1rem;
    }

    .post-content :global(h1) {
      font-size: 1.6rem;
    }

    .post-content :global(h2) {
      font-size: 1.4rem;
    }

    .post-content :global(h3) {
      font-size: 1.2rem;
    }

    .post-meta {
      flex-direction: column;
      gap: 0.5rem;
    }
  }

  /* ===== MEJORAS PARA MODO CLARO ===== */
  html.light .category-tag {
    background: rgba(0, 0, 0, 0.05);
  }

  html.light .post-content :global(blockquote) {
    background: rgba(0, 0, 0, 0.03);
    border-left-color: var(--txt-muted);
  }

  html.light .post-content :global(code) {
    background: rgba(0, 0, 0, 0.05);
    border-color: rgba(0, 0, 0, 0.1);
    color: var(--txt-muted);
  }

  html.light .post-content :global(pre) {
    background: var(--bg-card);
    border-color: rgba(0, 0, 0, 0.1);
  }

  html.light .post-content :global(th) {
    background: rgba(0, 0, 0, 0.05);
    color: var(--txt-main);
  }

  html.light .post-content :global(td) {
    border-bottom-color: rgba(0, 0, 0, 0.1);
  }
</style>