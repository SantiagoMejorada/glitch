	.feature-item:nth-child(2) { animation-delay: 0.2s; }
	.feature-item:nth-child(3) { animation-delay: 0.3s; }

	.genre-tag:nth-child(odd) {
		animation: pulse 2s infinite;
	}

	@keyframes pulse {
		0%, 100% { opacity: 1; }
		50% { opacity: 0.7; }
	}
</style>